<Window x:Class="AC_Career_Mode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AC_Career_Mode"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="680">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="1" Grid.ColumnSpan="4">
            <TabItem Header="Race">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="280"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <ListView x:Name="lv_RaceLst" SelectionMode="Single" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,6,5,10" SelectionChanged="selection_changed" >
                        <ListView.View>
                            <GridView>

                                <GridViewColumn Width="150" DisplayMemberBinding="{Binding Car.Name}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Tag="Car" Click="ColHeader_Click">Car</GridViewColumnHeader>
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <GridViewColumn Width="100" DisplayMemberBinding="{Binding Track.Name}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Tag="Track" Click="ColHeader_Click">Track</GridViewColumnHeader>
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <GridViewColumn Width="90" DisplayMemberBinding="{Binding Prize}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Tag="Prize" Click="ColHeader_Click">Prize</GridViewColumnHeader>
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <GridViewColumn Width="100" DisplayMemberBinding="{Binding Laps}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Tag="Laps" Click="ColHeader_Click">Laps</GridViewColumnHeader>
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <GridViewColumn Width="100" DisplayMemberBinding="{Binding TotalLength}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Tag="Length" Click="ColHeader_Click">Length</GridViewColumnHeader>
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!--<ListBox x:Name="lb_RaceLst" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,6,5,10" SelectionChanged="selection_changed"/>-->

                    <Image x:Name="track_background" Grid.Column="1"  Grid.Row="2" Margin="2,6,2,0" VerticalAlignment="Top" Height="160" />
                    <Image x:Name="track_preview" Grid.Column="1"  Grid.Row="2" Margin="2,6,2,0" VerticalAlignment="Top" Height="160" />
                    <Image x:Name="car_preview" Grid.Column="1"  Grid.Row="2" Margin="2,0,2,10" Height="160" VerticalAlignment="Bottom" />
                    <Button x:Name="b_goracing" IsEnabled="False" Content="Race!" Grid.Row="3" Grid.ColumnSpan="2" Click="b_goracing_Click" />

                </Grid>

            </TabItem>
            <TabItem Header="Bank" />

            <TabItem Header="Market" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="210"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="417*"/>
                        <RowDefinition Height="34*"/>
                    </Grid.RowDefinitions>
                    <ListView x:Name="lv_car_sale" SelectionMode="Single"  d:ItemsSource="{d:SampleData ItemCount=5}"  Grid.RowSpan="2" Margin="0,6,10,0" SelectionChanged="market_selection_changed" >
                        <ListView.View>
                            <GridView>

                                <GridViewColumn Width="300">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Tag="Car" Click="ColHeader_Click">Car</GridViewColumnHeader>
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <GridViewColumn Width="50">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Tag="Price" Click="ColHeader_Click">Price</GridViewColumnHeader>
                                    </GridViewColumn.Header>
                                </GridViewColumn>

                                <GridViewColumn Width="70">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader Tag="Mileage" Click="ColHeader_Click">Mileage</GridViewColumnHeader>
                                    </GridViewColumn.Header>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Image x:Name="img_forsalecar" Grid.Column="1"  Margin="2,6,2,0" VerticalAlignment="Top" Height="160" />
                    <Button Grid.Column="1" Content="Buy" IsEnabled="False" Grid.Row="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Profile">
                <Grid>
                    <TextBlock x:Name="tbl_ProfileDescription" TextWrapping="Wrap" Text="TextBlock" />

                </Grid>
            </TabItem>
        </TabControl>
        <Label x:Name="toplabel_User" Content="Gas" />
        <Label x:Name="toplabel_Money" Content="$10.000" Grid.Column="1" />
        <Label x:Name="toplabel_Wins" Content="🏆 11" Grid.Column="2" />
        <Label x:Name="toplabel_Races" Content="Races: 25" Grid.Column="3" />
    </Grid>
</Window>
