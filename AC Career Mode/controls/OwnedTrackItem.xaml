<UserControl x:Class="AC_Career_Mode.controls.OwnedTrackItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AC_Career_Mode.controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800" Width="Auto">
    <Grid HorizontalAlignment="Stretch" DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lb_Track" Content="{Binding TrackName}" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="592" />
        <Button Content="Sell" Margin="0,3,75,3" HorizontalAlignment="Right" Width="60"/>
        <Button Content="Upgrade" Margin="0,3,10,3" HorizontalAlignment="Right" Width="60"/>

    </Grid>
</UserControl>
