<UserControl x:Class="AC_Career_Mode.controls.OwnedCarsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AC_Career_Mode.controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800" Width="Auto">
    <Grid HorizontalAlignment="Stretch" DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lb_Car" Content="{Binding CarName}" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="592" />
        <ComboBox x:Name="cb_Driver" Margin="0,3,3,3" HorizontalAlignment="Right" Width="200"
                  ItemsSource="{Binding Drivers}"
                  SelectedValue="{Binding SelectedDriver}"
                  DisplayMemberPath="Name" />
        <Button Content="Sell" Margin="0,3,273,3" HorizontalAlignment="Right" Width="60"/>
        <Button Content="Button"  Margin="0,3,208,3" HorizontalAlignment="Right" Width="60"/>

    </Grid>
</UserControl>
